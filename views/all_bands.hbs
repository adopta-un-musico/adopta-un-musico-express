<app-band>
    <div class="wrap">
        <h1>Bands</h1>
        {{#if bands}}
            {{#each bands}}
            <div class="band">
                <div class="band-image">
                    <img src="/images/mexican-music.jpeg" alt="mexican-music">
                </div>
                <div class="band-info">
                    <h2>{{bandname}}</h1>
                    <p> Live in {{location}}</p>
                    <p>Likes: {{musicalGenres}}</p>
                    <button><a href="/bandas/profile/{{_id}}">Band profile</a></button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <span>Ups!!! There is no band yet :(</span>
        {{/if}}
    </div>
</app-band>